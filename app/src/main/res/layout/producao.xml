<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/geral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/secao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_inicio_estampa"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_padrao"
                    android:padding="10dp"
                    android:text="Início de estampa" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_decrementa"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/decrementa"
                    android:padding="10dp" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/meio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/tv_total_lote"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Total do Lote"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_num_total"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borda"
                        android:text="00000"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp" />
                </LinearLayout>

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_incrementa"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/incrementa"
                    android:padding="10dp" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_fim_estampa"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_padrao"
                    android:padding="10dp"
                    android:text="Fim de estampa" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/coluna1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_amostra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amostra"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/amostra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_dec_amostra"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:background="@drawable/decrementa"
                            android:padding="10dp" />

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_num_amostra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/borda"
                            android:padding="10dp"
                            android:text="10"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btn_inc_amostra"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:background="@drawable/incrementa"
                            android:padding="10dp" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/coluna2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@android:drawable/ic_menu_today" />
                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/coluna3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_tempo_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tempo total:"
                        android:textColor="@color/colorAccent"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/tv_peca_hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peças por hora:"
                        android:textColor="@color/colorAccent"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/tv_pecas_faltantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peças faltantes:"
                        android:textColor="@color/colorAccent"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/tv_tempo_peca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tempo por peça:"
                        android:textColor="@color/colorAccent"
                        android:textSize="24dp" />
                </LinearLayout>

                <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/coluna4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_tempo_total_valor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/colorSecondary"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/tv_peca_hora_valor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/colorSecondary"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/tv_pecas_faltantes_valor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/colorSecondary"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/tv_tempo_peca_valor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/colorSecondary"
                        android:textSize="24dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secao3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/coluna1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_tempo_espera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tempo de Espera"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/tempo_espera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btn_dec_tempo_espera"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:background="@drawable/decrementa"
                            android:padding="10dp" />

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_num_tempo_espera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/borda"
                            android:padding="10dp"
                            android:text="10"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btn_inc_tempo_espera"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:background="@drawable/incrementa"
                            android:padding="10dp" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/coluna2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_reset_valores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_padrao"
                        android:padding="10dp"
                        android:text="Resetar Valores" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secao4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/coluna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_iniciar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iniciar"
                        android:padding="10dp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_padrao"
                        android:padding="10dp"
                        android:text="Skip/Saltar" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_peca_falhada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_padrao"
                        android:padding="10dp"
                        android:text="Peça Falhada" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_ciclo_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_padrao"
                        android:padding="10dp"
                        android:text="Ciclo Auto" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_multi_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_padrao"
                        android:padding="10dp"
                        android:text="Multi Print" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_aquecer_paletes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_padrao"
                        android:padding="10dp"
                        android:text="Aquecer Paletes" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>